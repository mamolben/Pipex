{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Pipex",
      "type": "cppdbg",  
      "request": "launch", 
      "program": "${workspaceFolder}/pipex",  
      "args": [],  
      "stopAtEntry": false,  
      "cwd": "${workspaceFolder}",  
      "environment": [],
      "externalConsole": true,  
      "MIMode": "gdb",  
      "miDebuggerPath": "/usr/bin/gdb",  
      "preLaunchTask": "build",  
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
